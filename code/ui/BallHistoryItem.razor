@using Sandbox;
@using Sandbox.UI;
@using Sandbox.UI.Construct;
@using System;

@namespace Facepunch.Pool
@attribute [StyleSheet( "/ui/BallHistory.scss" )]
@inherits Panel

<root>
	<div class="icon @GetIconClass()"></div>
</root>

@code
{
	public PoolBallType BallType { get; set; }
	public PoolBallNumber BallNumber { get; set; }

	private string GetIconClass()
	{
		if ( BallType == PoolBallType.Black )
			return "black";
		else if ( BallType == PoolBallType.White )
			return "none";
		else
			return $"{ BallType.ToString().ToLower() }_{ (int)BallNumber }";
	}
}
