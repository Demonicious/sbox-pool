@using Sandbox;
@using Sandbox.UI;
@using Sandbox.UI.Construct;
@using System;

@namespace Facepunch.Pool
@attribute [StyleSheet( "/ui/summary/WinSummary.scss" )]
@inherits Panel

<root>
	<label class="opponent-text">
		@if ( Outcome == EloOutcome.Win )
			<text>Tou beat</text>
		else
			<text>You lost to</text>
	</label>

	<div class="opponent-background">
		<img src="avatar:@Player.Client.PlayerId" class="opponent-avatar" />
		<label class="opponent-name">@Player.Client.Name</label>
		<RankIcon Rank=@Player.Elo.GetRank() Level=@Player.Elo.GetLevel()></RankIcon>
	</div>
</root>

@code
{
	public EloOutcome Outcome { get; set; }
	public Player Player { get; set; }
}
